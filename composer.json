{
    "name": "paysera/lib-checkout-sdk-facade",
    "description": "PHP checkout SDK facade for Paysera payment gateway integration",
    "type": "library",
    "license": "LGPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "Paysera\\CheckoutSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Paysera\\CheckoutSdk\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Paysera",
            "homepage": "https://www.paysera.com/"
        }
    ],
    "require": {
        "php": ">=7.4",
        "psr/container": "^2.0",
        "webtopay/libwebtopay": "^2.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "paysera/lib-php-cs-fixer-config": "^2.5",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline --allow-empty-baseline",
        "format": "vendor/bin/paysera-php-cs-fixer fix --allow-risky=yes",
        "test": "vendor/bin/phpunit --do-not-cache-result",
        "test-coverage": "vendor/bin/phpunit --do-not-cache-result --coverage-html coverage",
        "post-update-cmd": [
            "Paysera\\PhpCsFixerConfig\\Composer\\PhpCsFixerConfigProvider::copyPhpCs"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/denjai/lib-php-cs-fixer-config.git"
        }
    ]
}
